    override void Draw(int state, double ticFrac)
    {
		super.Draw(state, TicFrac);

		if (state == HUD_None)
		{
			return;
		}

		if (state == HUD_StatusBar)
		{
			BeginHud();
			DrawFullscreenStuff();
			DrawHudNumberStuff();
		}
		if (state == HUD_Fullscreen)
		{
			BeginHud();
			DrawHudNumberStuff();
//			DrawMinmodeHudStuff();
		}		
		
    }
	void PlayerDamaged()
